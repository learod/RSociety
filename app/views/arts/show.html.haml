.page-header
  %h1="Arte"

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @art.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @art.description
%p
  %strong= model_class.human_attribute_name(:latitude) + ':'
  %br
  = @art.latitude
%p
  %strong= model_class.human_attribute_name(:longitude) + ':'
  %br
  = @art.longitude
%p
  %strong= model_class.human_attribute_name(:address) + ':'
  %br
  = @art.address


= link_to t('.back', :default => t("helpers.links.back")), arts_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_art_path(@art), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), art_path(@art), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Estas Seguro?')) }, :class => 'btn btn-danger'
